# JB Creations Production Environment Configuration
# Copy this file to .env.production and update with your production values

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=production
PORT=3001

# Strong JWT secret for production (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters-long

# Session timeout in milliseconds (24 hours = 86400000)
JWT_EXPIRES_IN=86400000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_NAME=jb_creations_auth.db

# Database backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Rate limiting (requests per window per IP)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Account lockout after failed login attempts
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=15

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# ==============================================
# SMS SERVICE CONFIGURATION (Choose ONE)
# ==============================================

# Option 1: Twilio Configuration
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Option 2: MSG91 Configuration (comment out Twilio if using this)
# SMS_SERVICE=msg91
# MSG91_AUTH_KEY=your_msg91_auth_key_here
# MSG91_TEMPLATE_ID=your_msg91_template_id_here
# MSG91_SENDER_ID=your_msg91_sender_id_here

# OTP settings
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# ==============================================
# CORS CONFIGURATION
# ==============================================

# Allowed origins (comma-separated list)
# For production, specify your actual domains
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# SSL/HTTPS CONFIGURATION
# ==============================================

# Enable HTTPS
HTTPS_ENABLED=false
SSL_KEY_PATH=/path/to/your/private-key.pem
SSL_CERT_PATH=/path/to/your/certificate.pem

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file paths
LOG_DIR=./logs
ERROR_LOG=error.log
COMBINED_LOG=combined.log

# Log rotation settings
MAX_LOG_SIZE=10m
MAX_LOG_FILES=5

# ==============================================
# ADMIN CONFIGURATION
# ==============================================

# Admin panel access (set to false to disable)
ADMIN_PANEL_ENABLED=true

# Admin authentication (optional - for admin endpoints)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password-here

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================

# Request body size limits
MAX_REQUEST_SIZE=1mb

# Connection timeout in milliseconds
REQUEST_TIMEOUT=30000

# Enable compression
COMPRESSION_ENABLED=true

# ==============================================
# MONITORING & ALERTS
# ==============================================

# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Email notifications (optional - requires nodemailer setup)
EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=admin@yourdomain.com

# ==============================================
# DEVELOPMENT OVERRIDES
# ==============================================

# Only for development - remove in production
DEBUG_MODE=false
VERBOSE_LOGGING=false