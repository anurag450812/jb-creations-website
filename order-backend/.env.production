# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=3001
AUTH_PORT=3001

# Domain Configuration (UPDATE THESE)
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# JWT Configuration (CRITICAL: Generate new secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=GENERATE_NEW_SECRET_HERE_256_BITS
JWT_EXPIRES_IN=7d

# Database Configuration
DATABASE_PATH=./production_users.db
DATABASE_BACKUP_PATH=./backups/

# SMS Service Configuration (Choose Twilio OR MSG91)
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# MSG91 Configuration (Alternative to Twilio)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_TEMPLATE_ID=your_msg91_template_id
MSG91_SENDER_ID=JBCRET

# Email Configuration
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASS=your-gmail-app-password
BUSINESS_EMAIL=orders@your-domain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
BCRYPT_SALT_ROUNDS=12
OTP_EXPIRY_MINUTES=10
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME_MINUTES=30

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# SSL Configuration (if using HTTPS directly in Node.js)
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# Database Configuration (if using PostgreSQL/MySQL instead of SQLite)
# DATABASE_URL=postgresql://username:password@localhost:5432/jb_creations
# DATABASE_SSL=true

# Redis Configuration (for session storage in scaled deployments)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Health Check Configuration
HEALTH_CHECK_TOKEN=your_health_check_secret_token